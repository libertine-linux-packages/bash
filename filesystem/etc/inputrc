# 8-bit (UTF-8) safe
set meta-flag On
set input-meta On
set convert-meta Off
set output-meta On

# Escape Sequence Mappings
"\eOd": backward-word
"\eOc": forward-word

# TERM linux
"\e[1~": beginning-of-line
"\e[4~": end-of-line
"\e[5~": beginning-of-history
"\e[6~": end-of-history
"\e[3~": delete-char
"\e[2~": quoted-insert

# TERM xterm
"\eOH": beginning-of-line
"\eOF": end-of-line

# TERM Konsole
"\e[H": beginning-of-line
"\e[F": end-of-line
